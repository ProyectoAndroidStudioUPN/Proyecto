<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.login_user.login_user">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondoprincipal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="406dp"
            android:layout_height="293dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="20sp"
            android:src="@drawable/platoprincipal" />

        <LinearLayout
            android:layout_width="365dp"
            android:layout_height="359dp"
            android:layout_marginHorizontal="25sp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="Login"
                android:textSize="50sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    android:hint="User" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    android:inputType="textPassword"
                    android:hint="Password" />
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:layout_width="147dp"
                android:layout_height="58dp"
                android:layout_marginHorizontal="120sp"
                android:layout_marginTop="15sp"
                android:background="@drawable/rounded"
                android:text="Ingresar" />


        </LinearLayout>

        <Button
            android:id="@+id/btnRegisterUser"
            android:layout_width="218dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="110sp"
            android:gravity="center_horizontal|center_vertical"
            android:paddingHorizontal="30sp"
            android:background="@drawable/rounded"
            android:text="Registrate ahora"
            android:onClick="ComponentRegisterUser"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>